@model DACN3.Models.Borrow

@{
    ViewData["Title"] = "ManagerBorrow";
    Layout = "~/Views/Shared/LayoutManager.cshtml";
}

<h1>ManagerBorrow</h1>

<h4>Borrow</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ManagerBorrow">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BorrowId" class="control-label"></label>
                <input asp-for="BorrowId" class="form-control" />
                <span asp-validation-for="BorrowId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeviceClassroomId" class="control-label"></label>
                <select asp-for="DeviceClassroomId" class ="form-control" asp-items="ViewBag.DeviceClassroomId"></select>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BorrowDate" class="control-label"></label>
                <input asp-for="BorrowDate" class="form-control" />
                <span asp-validation-for="BorrowDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReturnDate" class="control-label"></label>
                <input asp-for="ReturnDate" class="form-control" />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Borrower" class="control-label"></label>
                <input asp-for="Borrower" class="form-control" />
                <span asp-validation-for="Borrower" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
