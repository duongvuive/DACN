@model IEnumerable<DACN3.Models.ViewModel.NotificationDevice>

@{
    ViewData["Title"] = "Lịch sử xét duyệt";
    Layout = "~/Views/Shared/LayoutInventory.cshtml";
}

<form action="/Notification/ListNotificationHistory" method="get">
<div class="detail">
    <div class="report">
        <div class="cardHeader">
            <h2>DANH SÁCH LỊCH SỬ XÉT DUYỆT</h2>
        </div>
        <div class="filter">
    <label for="status">Trạng thái:</label>
    <select id="status" name="Status">
        <option value="">-- Tất cả --</option>
        <option value="Approved">Đã duyệt</option>
        <option value="Cancelled">Đã huỷ</option>
        <!-- Các trạng thái khác bạn muốn lọc -->
    </select>
    <button class="filter-button" style="background-color: #28a745;" type="submit">Lọc trạng thái</button>
        </div>
<table>
    <thead>
        <tr>
            <th>
                Thời gian
            </th>
            <th>
                Hình ảnh
            </th>
            <th>
                Số lượng
            </th>
            <th>
               Trạng thái
            </th>
            <th>
                Lí do
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Timestamp)
            </td>
            <td>
                <img src="@Url.Content(item.Image)" alt="Image" style="max-width: 100px; max-height: 100px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reason)
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
</form>
<script src="/js/script.js"></script>
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
<style>
    tr td {
        text-align: center;
    }
</style>