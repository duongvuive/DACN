@model IEnumerable<DACN3.Models.ViewModel.NotificationDevice>

@{
    ViewData["Title"] = "Lịch sử báo cáo";
    Layout = "~/Views/Shared/LayoutList.cshtml";
}

<h1>Lịch sử báo cáo</h1>

<form action="/Notification/ListNotificationHistory" method="get">
    <label for="status">Trạng thái:</label>
    <select id="status" name="Status">
        <option value="">-- Tất cả --</option>
        <option value="Approved">Đã duyệt</option>
        <option value="Cancelled">Đã huỷ</option>
        <!-- Các trạng thái khác bạn muốn lọc -->
    </select>
    <button type="submit">Lọc</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                Thời gian
            </th>
            <th>
                Hình ảnh
            </th>
            <th>
                Số lượng
            </th>
            <th>
               Trạng thái
            </th>
            <th>
                Lí do
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Timestamp)
            </td>
            <td>
                <img src="@Url.Content(item.Image)" alt="Image" style="max-width: 100px; max-height: 100px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reason)
            </td>
        </tr>
}
    </tbody>
</table>
<style>
    /* Apply a bit of styling to the form container */
    form {
        display: flex;
        align-items: center;
        margin-bottom: 20px; /* Add some spacing at the bottom */
    }

    /* Style the label */
    label {
        margin-right: 10px;
    }

    /* Style the select box */
    select {
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    /* Style the button */
    button {
        padding: 8px 15px;
        background-color: #4CAF50;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        /* Change button color on hover */
        button:hover {
            background-color: #45a049;
        }

</style>