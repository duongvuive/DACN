@model IEnumerable<DACN3.Models.ViewModel.ViewImportExportWarehouse>

@{
    ViewData["Title"] = "Lịch sử nhập xuất";
    Layout = "~/Views/Shared/LayoutList.cshtml";
}

<h1>Lịch sử nhập xuất kho</h1>

<form action="/Notification/ListHistoryStore" method="get">
    <label for="status">Trạng thái:</label>
    <select id="status" name="Status">
        <option value="">-- Tất cả --</option>
        <option value="Nhập Kho">Nhập Kho</option>
        <option value="Xuất Kho">Xuất Kho</option>
        <!-- Các trạng thái khác bạn muốn lọc -->
    </select>
    <button type="submit">Lọc</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên thiết bị
            </th>
            <th>
                Kho
            </th>
            <th>
                Trụ sở
            </th>
            <th>
                Thời gian
            </th>
            <th>
                Trạng thái
            </th>
            <th>
               Quản lý kho
            </th>
            <th>
                Số lượng
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameDevice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameWarehouse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Area)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WarehouseMagement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
        </tr>
}
    </tbody>
</table>
<style>
    /* Apply a bit of styling to the form container */
    form {
        display: flex;
        align-items: center;
        margin-bottom: 20px; /* Add some spacing at the bottom */
    }

    /* Style the label */
    label {
        margin-right: 10px;
    }

    /* Style the select box */
    select {
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    /* Style the button */
    button {
        padding: 8px 15px;
        background-color: #4CAF50;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        /* Change button color on hover */
        button:hover {
            background-color: #45a049;
        }

</style>