@model DACN3.Models.ViewModel.DeviceBroken

@{
    ViewData["Title"] = "Báo cáo";

}

<h1>Báo cáo</h1>

<div>
    <h4>Thông tin thiết bị</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">

            <img src="@Url.Content(Model.Image)" alt="Image" style="max-width: 400px; max-height: 400px;" />

        </dd>

        <dt class="col-sm-2">
            Tên thiết bị
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NameDevice)
        </dd>
        <dt class="col-sm-2">
            Phòng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Classroom)
        </dd>
        @* <dt class="col-sm-2">
        Số lượng
        </dt> *@
        <div class="form-group-sm">
            <label asp-for="Amount" class="control-label">Số lượng</label>
            <input id="amountInput" asp-for="Amount" class="form-control-sm" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
    </dl>
</div>
<div>
    <button onclick="ConfirmFunction()">Xác nhận</button>
</div>

<script>
    function ConfirmFunction() {
        var amountValue = document.getElementById('amountInput').value;
        console.log('amountValue:', amountValue); // Thêm dòng này để kiểm tra giá trị amountValue
        var parsedAmount = parseInt(amountValue);

        fetch('/Notification/Confirm', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ amount: parsedAmount })
        })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert(data.message);
                    window.location.href = '/Manager/ManagerStaff';
                } else {
                    alert(data.message);
                }
            })
    }

</script>
